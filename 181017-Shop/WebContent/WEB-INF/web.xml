<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <servlet>
    <description>LoginServlet</description>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.yunsi.shop.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>ShopServlet</description>
    <display-name>ShopServlet</display-name>
    <servlet-name>ShopServlet</servlet-name>
    <servlet-class>com.yunsi.shop.servlet.ShopServlet</servlet-class>
    <init-param>
      <param-name>filepath</param-name>
      <param-value>/WEB-INF/files/goods.txt</param-value>
    </init-param>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShopServlet</servlet-name>
    <url-pattern>/shop</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>BuyProduct</description>
    <display-name>BuyProduct</display-name>
    <servlet-name>BuyProduct</servlet-name>
    <servlet-class>com.yunsi.shop.servlet.BuyProductServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BuyProduct</servlet-name>
    <url-pattern>/servlet/buy</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>CartServlet</description>
    <display-name>CartServlet</display-name>
    <servlet-name>CartServlet</servlet-name>
    <servlet-class>com.yunsi.shop.servlet.CartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CartServlet</servlet-name>
    <url-pattern>/servlet/cart</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>LogoutServlet</display-name>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.yunsi.shop.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/servlet/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>CheckOutServlet</display-name>
    <servlet-name>CheckOutServlet</servlet-name>
    <servlet-class>com.yunsi.shop.servlet.CheckOutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CheckOutServlet</servlet-name>
    <url-pattern>/servlet/checkout</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>DeleProductServlet</display-name>
    <servlet-name>DeleProductServlet</servlet-name>
    <servlet-class>com.yunsi.shop.servlet.DeleProductServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleProductServlet</servlet-name>
    <url-pattern>/servlet/dele</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>CartInfoServlet</display-name>
    <servlet-name>CartInfoServlet</servlet-name>
    <servlet-class>com.yunsi.shop.servlet.CartInfoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CartInfoServlet</servlet-name>
    <url-pattern>/servlet/cartinfo</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>DownInfoServlet</display-name>
    <servlet-name>DownInfoServlet</servlet-name>
    <servlet-class>com.yunsi.shop.servlet.DownInfoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DownInfoServlet</servlet-name>
    <url-pattern>/servlet/downinfo</url-pattern>
  </servlet-mapping>
  <filter>
    <display-name>FormatFilter</display-name>
    <filter-name>FormatFilter</filter-name>
    <filter-class>com.yunsi.shop.servlet.FormatFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>FormatFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>LoginFilter</display-name>
    <filter-name>LoginFilter</filter-name>
    <filter-class>com.yunsi.shop.servlet.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/servlet/*</url-pattern>
  </filter-mapping>
</web-app>